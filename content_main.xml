<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.anas.myapplicationcalculator.MainActivity"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="496dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/screenTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="34sp" />

        <Button
            android:id="@+id/Seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Eight"
            android:layout_alignBottom="@+id/Eight"
            android:layout_alignParentStart="true"
            android:layout_marginStart="28dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="7" />

        <Button
            android:id="@+id/Eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Nine"
            android:layout_alignBottom="@+id/Nine"
            android:layout_toEndOf="@+id/Seven"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="8" />

        <Button
            android:id="@+id/Nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Six"
            android:layout_toEndOf="@+id/Eight"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="9" />

        <Button
            android:id="@+id/Four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Five"
            android:layout_alignBottom="@+id/Five"
            android:layout_toStartOf="@+id/Eight"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="4" />

        <Button
            android:id="@+id/Five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Six"
            android:layout_alignBottom="@+id/Six"
            android:layout_toEndOf="@+id/Four"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="5" />

        <Button
            android:id="@+id/Six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Two"
            android:layout_toEndOf="@+id/Five"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="6" />

        <Button
            android:id="@+id/One"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Four"
            android:layout_centerVertical="true"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="1" />

        <Button
            android:id="@+id/Two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/One"
            android:layout_alignBottom="@+id/One"
            android:layout_alignStart="@+id/Five"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="2" />

        <Button
            android:id="@+id/Three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Two"
            android:layout_alignBottom="@+id/Two"
            android:layout_alignStart="@+id/Six"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:backgroundTintMode="src_in"
            android:text="3" />

        <Button
            android:id="@+id/plus"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/sub"
            android:layout_alignStart="@+id/sub"
            android:layout_alignTop="@+id/Nine"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="+" />

        <Button
            android:id="@+id/sub"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/plus"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="-" />

        <Button
            android:id="@+id/multiplication"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/sub"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="*" />

        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/equal"
            android:layout_alignBottom="@+id/equal"
            android:layout_alignLeft="@+id/One"
            android:layout_alignStart="@+id/One"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:text="/" />

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/zero"
            android:layout_alignBottom="@+id/zero"
            android:layout_alignLeft="@+id/div"
            android:layout_alignStart="@+id/div"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="=" />

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/zero"
            android:layout_alignBottom="@+id/zero"
            android:layout_toEndOf="@+id/zero"
            android:layout_toRightOf="@+id/zero"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="C" />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/One"
            android:layout_toEndOf="@+id/One"
            android:layout_toRightOf="@+id/One"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="0" />

        <EditText
            android:id="@+id/et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/Nine"
            android:layout_below="@+id/screenTextView"
            android:layout_marginEnd="21dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:selectAllOnFocus="false" />

        <Button
            android:id="@+id/mod"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/clear"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/holo_red_dark"
            android:text="%"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="447dp" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
